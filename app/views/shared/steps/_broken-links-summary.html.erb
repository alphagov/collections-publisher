<%= step.title %>

<% if step.link_report? %>
  <div class="step-broken-links__summary">
    <% if step.broken_links? %>
      <span class="app-broken-link-status app-broken-link-status--fail">
        <%= inline_svg_tag "cross.svg" %>
        <%= pluralize(step.broken_links.count, "broken link") %> found
      </span>
    <% else %>
      <span class="app-broken-link-status app-broken-link-status--pass">
        <%= inline_svg_tag "tick.svg" %>
        No broken links
      </span>
    <% end %>
  </div>
<% end %>

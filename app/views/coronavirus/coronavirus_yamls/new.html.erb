<%= render 'coronavirus/shared/breadcrumbs', text: "Edit YAML!"  %>
<% content_for :title, formatted_title(@page) %>
<% content_for :context, "EDIT YAML!" %>

<div class="covid-edit-page govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @coronavirus_yaml, coronavirus_yaml: @coronavirus_yaml, url: coronavirus_page_coronavirus_yamls_path do %>
      <%= render "govuk_publishing_components/components/input", {
        label: {
          text: "Edit YAML!!",
          bold: true,
        },
        name: "coronavirus_yaml[content]",
        id: "content",
      } %>

      <%= render "govuk_publishing_components/components/button", {
        text: "Save",
        margin_bottom: true
      } %>
    <% end %>
  </div>
</div>

<% content_for :title, "Coronavirus pages" %>

<h2 class="govuk-heading-s govuk-!-margin-bottom-2">Coronavirus landing page</h2>
<ul class="govuk-list">
  <li><%= link_to t("coronavirus.index.landing_page_edit.accordions"), coronavirus_page_path(slug: @topic_page.slug), class:"govuk-link" %></li>
  <li><%= link_to t("coronavirus.index.landing_page_edit.live_stream_url"), coronavirus_live_stream_index_path, class:"govuk-link" %></li>
  <li><%= link_to t("coronavirus.index.landing_page_edit.something_else"), prepare_coronavirus_page_path(slug: @topic_page[:slug]), class:"govuk-link" %></li>
</ul>

<% @subtopic_pages.each do |page| %>
  <h2 class="govuk-heading-s govuk-!-margin-bottom-2"><%=page.name%></h2>
  <ul class="govuk-list">
    <li class="covid__spaced-list-item"><%= link_to t("coronavirus.index.subtopic_edit.accordions", page_name: page.name.downcase), coronavirus_page_path(slug: page.slug), class:"govuk-link" %></li>
    <li class="covid__spaced-list-item"><%= link_to t("coronavirus.index.subtopic_edit.something_else", page_name: page.name.downcase), prepare_coronavirus_page_path(slug: page[:slug]), class:"govuk-link" %></li>
  </ul>
<% end %>

<%= render "coronavirus/shared/breadcrumbs", text: t("coronavirus.sub_sections.edit.title") %>
<% content_for :title, @page.title %>
<% content_for :context, t("coronavirus.sub_sections.edit.title") %>
<% if @sub_section.errors.any? %>
  <%= render "shared/sub_sections/form_errors", resource: @sub_section %>
<% end %>

<div class="covid-edit-page govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for @sub_section, url: coronavirus_page_sub_section_path(@page.slug, @sub_section) do |form| %>
      <%= render "form", form: form %>
    <% end %>
  </div>
</div>

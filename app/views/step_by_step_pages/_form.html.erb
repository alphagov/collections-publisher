<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_for(@step_by_step_page) do |form| %>
      <%= render "shared/steps/form_errors", resource: step_by_step_page %>

      <%= render "govuk_publishing_components/components/input", {
        label: {
          text: "Title"
        },
        name: :title,
        value: step_by_step_page.title
      } %>

      <%= render "govuk_publishing_components/components/input", {
        label: {
          text: "Slug (no slashes)"
        },
        name: :slug,
        value: step_by_step_page.slug
      } %>

      <%= render "govuk_publishing_components/components/textarea", {
        label: {
          text: "Introduction"
        },
        name: :introduction,
        value: step_by_step_page.introduction
      } %>

      <%= render "govuk_publishing_components/components/textarea", {
        label: {
          text: "Meta description"
        },
        name: :description,
        value: step_by_step_page.description
      } %>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
          <%= render "govuk_publishing_components/components/button", {
            text: "Save"
          } %>
        </div>
        <div class="govuk-grid-column-full govuk-!-margin-top-3">
          <%= link_to 'Cancel', @step_by_step_page %>
        </div>
      </div >
    <% end %>
  </div>
</div>

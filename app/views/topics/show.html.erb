<%= tag_header @topic do %>
  <% if gds_editor? %>
    <%= link_to 'Edit topic', 
      edit_topic_path(@topic) %>

    <% if @topic.may_publish? %>
      <%= link_to 'Publish topic', publish_topic_path(@topic), method: :post %>
    <% end %>

    <% if @topic.child? && @topic.tagged_documents.empty? %>
      <% if @topic.published? %>
        <%= link_to 'Archive topic', propose_archive_topic_path(@topic) %>
      <% else %>
        <%= link_to 'Remove topic', archive_topic_path(@topic),
          method: 'post',
          data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= render 'shared/tags/metadata', resource: @topic %>
<%= render 'shared/tags/children', resource: @topic %>

<% if @topic.child? %>
  <%= render 'shared/tags/lists_of_links_preview', tag: @topic %>
<% end %>

<% if @topic.redirect_routes.any? %>
  <%= render 'redirects', redirect_routes: @topic.redirect_routes %>
<% end %>

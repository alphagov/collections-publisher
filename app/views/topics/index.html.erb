<% content_for :title, "Specialist topic pages" %>

<% if gds_editor? %>
  <% content_for :title_side, render("govuk_publishing_components/components/button", {
    text: "Add a specialist topic page",
    href: new_topic_path,
    margin_bottom: true,
  }) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <p class="govuk-body govuk-!-margin-bottom-3"><%= pluralize(@topics.count, "specialist topic") %></p>
    <%= render "shared/list-browse-pages", pages: @topics %>
  </div>
</div>

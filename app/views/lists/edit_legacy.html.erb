<%= header "Edit '#{@list.name}'",
  breadcrumbs: [active_navigation_item, @tag.parent, @tag,
    link_to('Links', tag_lists_path(@tag)), @list.name] %>

<%= form_for @list, :url => tag_list_path(@tag, @list) do |f| %>
  <%= f.text_field :name %>
  <%= f.submit 'Update list', class: 'btn-submit' %>
<% end %>

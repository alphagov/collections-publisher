<%= render "govuk_publishing_components/components/input", {
  label: {
    text: "Accordion name",
    bold: true
  },
  name: "sub_section[title]",
  id: "title",
  value: @sub_section.title
} %>
<%= render "components/markdown_editor", {
  label: {
    text: "Links and link text",
    bold: true
  },
  textarea: {
    name: "sub_section[content]",
    id: "content",
    rows: 20,
    value: @sub_section.content
  },
  hide_heading_buttons: true,
  blockquote_button: true,
  hide_numbered_button: true,
  hide_bullets_button: true
} %>
<%= render "govuk_publishing_components/components/input", {
  label: {
    text: "Featured link",
    bold: true
  },
  name: "sub_section[featured_link]",
  id: "title",
  value: @sub_section.featured_link
} %>
<%= render "govuk_publishing_components/components/button", {
  text: "Save",
  margin_bottom: true
} %>
<%= tag.p (link_to 'Cancel', coronavirus_page_path(@coronavirus_page.slug), class: "govuk-link govuk-link--no-visited-state"), class: "govuk-body" %>
